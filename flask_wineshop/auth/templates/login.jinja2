{% extends "layout.jinja2" %}

{% block title %}Register{% endblock %}

{% block pagestyles %}
    {% assets "auth_style_bundle" %}
        <link href="{{ ASSET_URL }}" rel="stylesheet" type="text/css">
    {% endassets %}
{% endblock %}

{% block content %}
    <div class="w-full   flex flex-col sm:justify-center items-center justify-center  mt-10 sm:pt-0">
        <div class="w-full mt-4 sm:max-w-md p-5 mx-auto">

            <h2 class="page-title mb-12 text-center text-5xl text-gray-800 font-semibold">Sign In</h2>

            <form action="{{ url_for('auth.login') }}" method="POST" autocomplete="off" novalidate>
                {{ form.hidden_tag() }}

                <fieldset class="username mb-8">
                    {{ form.username.label(class="font-black text-3xl") }}
                    {{ form.username(class="border-gray-900 py-1 rounded-md") }}
                    {% if form.username.errors %}
                        <ul class="errors font-black mt-2">
                            {% for error in form.username.errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </fieldset>

                <fieldset class="password">
                    {{ form.password.label(class="font-black text-3xl") }}
                    {{ form.password(class="border-gray-900 py-1 rounded-md") }}
                    {% if form.password.errors %}
                        <ul class="errors font-black mt-2">
                            {% for error in form.password.errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </fieldset>
                <br>
                {% include '_button-submit.jinja2' %}
            </form>
        </div>

    </div>
{% endblock %}

